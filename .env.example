# Trading Bot Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Trading Mode (PAPER, TESTNET, LIVE)
TRADING_MODE=PAPER

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_api_secret_here

# Notion Integration
NOTION_ENABLED=false
NOTION_API_KEY=your_notion_api_key_here
NOTION_DB_SIGNALS=your_notion_signals_db_id
NOTION_DB_EXECUTIONS=your_notion_executions_db_id
NOTION_DB_DAILY_STATS=your_notion_daily_stats_db_id

# Discord Alerting
DISCORD_ALERTS_ENABLED=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id_here/your_webhook_token_here

# Database
DATABASE_PATH=data/trading.db

# API Server
API_PORT=8000
API_HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# ML Settings
ML_ENABLED=true
ML_MODELS_DIR=models
ML_AUTO_RETRAIN=true

# Optional: Timeout settings
API_TIMEOUT_SECONDS=30
REQUEST_TIMEOUT_SECONDS=10
